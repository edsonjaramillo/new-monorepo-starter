{
  "name": "monorepo-starter",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter=@repo/cache --filter=@repo/database --filter=@repo/http --filter=@repo/logger --filter=@repo/ui --filter=@repo/validation",
    "build:server": "turbo build --filter=server",
    "build:web": "turbo build --filter=web",
    "check": "manypkg check",
    "clean": "turbo clean",
    "clean-cache": "rimraf .turbo && turbo clean-cache",
    "clean-node-modules": "rimraf node_modules && turbo clean-node-modules",
    "dev": "pnpm build:packages && turbo dev --filter=server --filter=web",
    "docker:dev:down": "docker compose --env-file ./docker-dev/.env -f ./docker-dev/docker-compose.dev.yml down",
    "docker:dev:up": "docker compose -f ./docker-dev/docker-compose.dev.yml up -d",
    "fix": "manypkg fix",
    "format": "turbo format",
    "graph": "mkdir -p graphs && turbo build --filter=server --graph=graphs/server.jpg && turbo build --filter=web --graph=graphs/web.jpg",
    "graph:server": "turbo build --filter=server --graph=server.jpg",
    "graph:web": "turbo build --filter=web --graph=web.jpg",
    "lint": "turbo lint",
    "seed": "turbo seed",
    "start": "turbo start",
    "start:server": "turbo start --filter=server",
    "start:web": "turbo start --filter=web",
    "studio": "turbo studio"
  },
  "devDependencies": {
    "@manypkg/cli": "0.23.0",
    "@repo/configs": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "prettier": "3.5.0",
    "prettier-plugin-packagejson": "2.5.8",
    "rimraf": "6.0.1",
    "turbo": "2.4.1",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.2.1",
  "engines": {
    "node": ">=18"
  }
}
