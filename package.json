{
  "name": "monorepo-starter",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "check": "manypkg check",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean",
    "clean-cache": "rm -rf .turbo && turbo run clean-cache",
    "clean-node-modules": "rm -rf node_modules && turbo run clean-node-modules",
    "dev": "kill-port 3000 4000 && turbo run prep && turbo run dev",
    "docker:dev:down": "docker compose --env-file ./docker-dev/.env -f ./docker-dev/docker-compose.dev.yml down",
    "docker:dev:up": "docker compose -f ./docker-dev/docker-compose.dev.yml up -d",
    "fix": "manypkg fix",
    "format": "turbo format",
    "graph:server": "turbo run build --filter=server --graph=server.jpg",
    "graph:web": "turbo run build --filter=web --graph=web.jpg",
    "lint": "turbo run lint",
    "prep": "turbo run prep"
  },
  "devDependencies": {
    "@manypkg/cli": "0.23.0",
    "@repo/configs": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "kill-port-process": "3.2.1",
    "prettier": "3.5.0",
    "prettier-plugin-packagejson": "2.5.8",
    "turbo": "2.4.1",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.2.1",
  "engines": {
    "node": ">=18"
  }
}
