{
  "name": "@repo/database",
  "type": "module",
  "exports": {
    "./client": {
      "types": "./dist/database.client.d.ts",
      "import": "./dist/database.client.js"
    },
    "./queries": {
      "types": "./dist/queries/index.d.ts",
      "import": "./dist/queries/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.js"
    }
  },
  "scripts": {
    "build": "tsup --env.CONFIG=production",
    "check-types": "tsc --noEmit",
    "clean": "rimraf dist",
    "clean-cache": "rimraf .turbo",
    "clean-node-modules": "rimraf node_modules",
    "dev": "tsup --env.CONFIG=development",
    "format": "prettier --write --cache .",
    "generate": "drizzle-kit generate",
    "lint": "eslint src --max-warnings 0",
    "migrate": "drizzle-kit migrate",
    "prep": "tsup --env.CONFIG=prepare",
    "push": "drizzle-kit push",
    "seed": "tsx src/seed/seed.main.ts",
    "studio": "drizzle-kit studio"
  },
  "dependencies": {
    "@repo/cache": "workspace:*",
    "@repo/validation": "workspace:*",
    "dotenv": "16.4.7",
    "drizzle-orm": "0.39.3",
    "postgres": "3.4.5",
    "uuidv7": "1.0.2",
    "valibot": "1.0.0-rc.2"
  },
  "devDependencies": {
    "@repo/configs": "workspace:*",
    "@trivago/prettier-plugin-sort-imports": "5.2.2",
    "@types/node": "22.13.5",
    "drizzle-kit": "0.30.4",
    "eslint": "9.21.0",
    "prettier": "3.5.2",
    "prettier-plugin-packagejson": "2.5.8",
    "rimraf": "6.0.1",
    "tsup": "8.3.6",
    "tsx": "4.19.2",
    "typescript": "5.7.3"
  }
}
