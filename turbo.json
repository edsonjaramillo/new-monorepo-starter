{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "env": [
        "NODE_ENV",
        "PORT",
        "POSTGRES_HOST",
        "POSTGRES_NAME",
        "POSTGRES_PASSWORD",
        "POSTGRES_PORT",
        "POSTGRES_URL",
        "POSTGRES_USER",
        "VALKEY_HOST",
        "VALKEY_PORT"
      ],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "check-types": {
      "cache": true
    },
    "clean": {
      "cache": false
    },
    "clean-cache": {
      "cache": false
    },
    "clean-node-modules": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "format": {
      "cache": false
    },
    "lint": {
      "cache": true
    },
    "prep": {
      "dependsOn": ["^prep"]
    }
  }
}
